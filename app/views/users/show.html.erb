<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div class="coloumn-email">
        <label for="user_email" class="control-label">Email:</label>
        <%= @user.email %>
      </div>
      <div class="coloumn-location">
        <label for="user_location" class="control-label">Location:</label>
        <%= @user.location %>
      </div>
      <%= link_to "プロフィールの編集" , edit_user_path(@user) %>
    </section>
    <section>
      <%= link_to "followings" , followings_user_path %>
      <%= link_to "followers" , followers_user_path %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>